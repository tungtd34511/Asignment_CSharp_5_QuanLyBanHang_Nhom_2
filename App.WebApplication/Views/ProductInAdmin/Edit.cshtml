@model App.API.Infrastructure.ViewModels.Catalog.Products.ProductUpdateRequest
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid px-4">
<h1 class="mt-4">Sửa Sản Phẩm</h1>
		<ol class="breadcrumb mb-4">
			<li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang Chủ</a></li>
        <li class="breadcrumb-item active"><a asp-action="Index">Sản Phẩm</a></li>
        <li class="breadcrumb-item active">Sửa sản phẩm @Model.Id</li>
		</ol>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <input asp-for="Id" type="hidden" />
            <div class="form-group p-2">
                    <label asp-for="Name" class="control-label h5"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                    <label asp-for="Description" class="control-label h5"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
                <div class="form-group p-2">
                <label asp-for="Details" class="control-label h5"></label>
                <input asp-for="Details" class="form-control" />
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                    <label asp-for="SeoDescription" class="control-label h5"></label>
                <input asp-for="SeoDescription" class="form-control" />
                <span asp-validation-for="SeoDescription" class="text-danger"></span>
            </div>
                <div class="form-group p-2">
                    <label asp-for="SeoTitle" class="control-label h5"></label>
                <input asp-for="SeoTitle" class="form-control" />
                <span asp-validation-for="SeoTitle" class="text-danger"></span>
            </div>
                <div class="form-group p-2">
                    <label asp-for="SeoAlias" class="control-label h5"></label>
                <input asp-for="SeoAlias" class="form-control" />
                <span asp-validation-for="SeoAlias" class="text-danger"></span>
            </div>
        <div class="form-group p-2">
            <label asp-for="ThumbnailImage" class="control-label h5"></label>
            <input asp-for="ThumbnailImage" class="form-control" />
            <span asp-validation-for="ThumbnailImage" class="text-danger"></span>
        </div>
         
            <div class="form-group d-flex flex-row p-2">
                <input type="submit" value="Save" class="btn btn-primary" />
                    <a class="btn-success btn " style="margin-left:15px;"  asp-action="Index">Quay Lại</a>
            </div>
        </form>
    </div>
</div>


</div>