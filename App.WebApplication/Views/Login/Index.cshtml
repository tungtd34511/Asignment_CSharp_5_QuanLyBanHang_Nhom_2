@model App.API.Infrastructure.ViewModels.System.Users.LoginRequest
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
	Layout = "_ShopLayout2";
}
<!-- Page Header Start -->
<div class="container-fluid bg-secondary pb-1">
	<div class="d-flex flex-column align-items-center justify-content-center section" style="min-height: 300px">
		<h1 class="font-weight-semi-bold text-uppercase mb-3">Login</h1>
		<div class="d-inline-flex">
			<p class="m-0"><a asp-controller="Shop" asp-action="Index">Home</a></p>
			<p class="m-0 px-2">-</p>
			<p class="m-0">Login</p>
		</div>
	</div>
</div>
<!-- Page Header End -->
    <div class="bg-primary pb-3 section">
        <div id="layoutAuthentication">
            <div id="layoutAuthentication_content">
                <main>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-5">
                                <div class="card shadow-lg border-0 rounded-lg mt-5">
	                                <div class="card-body">
	                                    <form asp-action="Index">
		                                    <div class="form-floating mb-3 ">
			                                    <div class=" mb-1 h4 wow slideInRight">User Name </div> 
			                                    <input class="form-control p-2" asp-for="@Model.UserName" type="text" placeholder="name@example.com"/>

		                                    </div>
		                                    <div class="form-floating mb-1 ">
			                                    <div class=" mb-1 h4 wow slideInLeft">Password</div> 
			                                    <input class="form-control p-2 " asp-for="@Model.Password" type="password" placeholder="Password"/>

		                                    </div>
		                                    <div class="d-flex align-items-center justify-content-start mt-4 mb-0" style="color: #6046b6;">
			                                    <input class="checkbox-inline" asp-for="@Model.RememberMe" type="checkbox">
			                                    <label class="form-check-label">Remember Password</label>
		                                    </div>
		                                    <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
			                                    <button type="submit"  class="btn btn-primary">Login</button>
			                                    <a class="" href="password.html">Forgot Password?</a>
		                                    </div>
                                        </form>
                                    </div>
                                    <div class="card-footer text-center py-3">
                                        <div class="small"><a href="register.html">Need an account? Sign up!</a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
        </div>

    </div>
